%body#top{ data: { spy: "scroll", target: "#navbar"} }
  %header.slideup.affix-top{ data: { spy: "affix", "offset-top": 10 } }
    = navbar id: "navbar", fluid: true, position: :top, padding: 0 do
      = vertical do
        = link_to root_path do
          .nav-logo 
            .sm-logo
              =image_tag "https://s3.amazonaws.com/alvg/avg-logo.png", class: 'img-responsive'
            %span Alumni Ventures Group
      = horizontal do
        = nav class: 'navbar-right' do
          = link_to "about", "#about"
          = link_to "funds", "#funds"
          = link_to "faqs", "#faqs"
          = link_to "newsletters", "#newsletters"
          = link_to "board", "#board"
          = link_to "contact", "#contact"
          = link_to "careers", "#careers"

